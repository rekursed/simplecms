{% extends 'ZeteqAdminBundle:Admin:admin_layout.html.twig' %}

 {% block title %}
Edit BlogPost --Admin
{% endblock %}

{% block content -%}

<script>
    // wait for the DOM to be loaded 
    $(document).ready(function() {
        $("#save_button").click(function() {
            $(this).html('<i class="fa fa-refresh fa-spin"></i> Saving');
        });

        // bind 'myForm' and provide a simple callback function 
        $('form').ajaxForm(function() {
            $("#save_button").html('save');
        });
    });
</script> 

{{ form_start(edit_form) }} 


<nav id="form_fixed_top_menu"  class="navbar navbar-default  navbar-fixed-top" role="navigation">

    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#nav_collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

            <a class="navbar-brand">BlogPost update</a>

        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div id="nav_collapse" class="collapse navbar-collapse">

           <button id="save_button" style="margin-right: 10px"  class="btn btn-success pull-right navbar-btn" type="submit">Save</button>


            <a style="margin-right: 10px"  class="btn btn-default navbar-btn pull-right"  href="{{ path('blogpost') }}">
                Back to the list
            </a>
            <a style="margin-right: 10px"  class="btn btn-info navbar-btn pull-right"  href=" {{ path('blogpost_new') }} ">

                Create another post
            </a> 

           


            <a style="margin-right: 10px"  class="btn btn-primary navbar-btn pull-right"  href="{{ path('blogpost_show',{'slug':edit_form.vars.value.slug}) }}">
              View post
            </a>  
            
              <a style="margin-right: 10px"  class="btn btn-danger navbar-btn pull-right" onclick="return confirm('Are you sure');"  href=" {{ path('blogpost_delete',{'id':edit_form.vars.value.getId()}) }}">

                <span class="glyphicon glyphicon-remove"></span> Delete
            </a> 


        </div><!-- /.navbar-collapse -->

    </div>
</nav>


 {{ form_errors(edit_form) }} 

   {{ form_end(edit_form) }} 

{% endblock %}

