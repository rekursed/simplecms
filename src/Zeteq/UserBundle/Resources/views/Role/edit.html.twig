{% extends 'ZeteqAdminBundle:Admin:admin_layout.html.twig' %}


{% block title %}
Edit Role --Main Admin
{% endblock %}


{% block stylesheets %}
{{parent()}}
{{ form_stylesheet(edit_form) }}
{% endblock %}

{% block javascripts %}
{{parent()}}    {{ form_javascript(edit_form) }}
{% endblock %}




{% block content %}

{{ form_start(edit_form) }}

<nav id="form_fixed_top_menu"  class="navbar navbar-default  navbar-fixed-top" role="navigation">

    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#nav_collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

            <a class="navbar-brand">Role update</a>

        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div id="nav_collapse" class="collapse navbar-collapse">



            <button class="btn btn-success pull-right navbar-btn" type="submit">Save</button>
            <a style="margin-right: 10px"  class="btn btn-default navbar-btn pull-right"  href="{{ path('role') }}">
                Back to the list
            </a>
            <a style="margin-right: 10px"  class="btn btn-info navbar-btn pull-right"  href="{{ path('role_new') }}">

                Create another Role
            </a> 

            <a style="margin-right: 10px"  class="btn btn-danger navbar-btn pull-right" onclick="return confirm('Are you sure');"  href=" {{ path('category_delete',{'id':edit_form.vars.value.getId()}) }}">

                <span class="glyphicon glyphicon-remove"></span> Delete
            </a> 
        </div><!-- /.navbar-collapse -->

    </div>
</nav>


