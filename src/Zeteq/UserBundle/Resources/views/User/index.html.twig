{% extends 'ZeteqAdminBundle:Admin:admin_layout.html.twig' %}


{% block title %}
Admin
{% endblock %}
{% block content %}
    <h1>User list</h1>
    
    
  
  <div class="">
      <nav role="navigation" class="navbar navbar-default">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button data-target="#bs-example-navbar-collapse-1" data-toggle="collapse" class="navbar-toggle" type="button">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a href="#" class="navbar-brand">Users</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div  class="collapse navbar-collapse">

          <ul class="nav navbar-nav navbar-right">
            <li>            
            <a href="{{ path('user_new') }}">
                Create a new entry
            </a>
</li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </nav>
    </div>  
    
    
    
    
    
    
    

  <table class="table table-hover table-responsive table-striped record_properties">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Is active</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('user_edit', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.isActive }}</td>
                <td>{% for role in entity.getRoles() %} {{role}} {% endfor%}</td>
                <td>
                <ul>

                                        <li>
                        <a href="{{ path('user_change_password', { 'id': entity.id }) }}">change password</a>
                    </li>
                    
                    <li>
                        <a href="{{ path('user_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    {% endblock %}
