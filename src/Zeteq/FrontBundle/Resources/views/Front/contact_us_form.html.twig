    <script>
// wait for the DOM to be loaded 
        $(document).ready(function() {

            $("#btn_cform").click(function() {
//              $(this).html('<i class="fa fa-refresh fa-spin"></i> sending message');

            });

            var options = {
//                 target: '#subs_resulta',
                clearForm: true,
                
                 beforeSubmit: function() {
                    $("#btn_cform").html('sent');
                    $("#subs_resulta").addClass('btn btn-primary').html('Thank you very much for contacting us. We will get back to you as soon as possible');

                },
                success: function() {
                    $("#btn_cform").html('send');
                    $("#subs_resulta").removeClass('btn btn-primary').html('');

                }


            };


            $('#subsForma').ajaxForm(options);
        });
    </script> 
              
              <h3>
