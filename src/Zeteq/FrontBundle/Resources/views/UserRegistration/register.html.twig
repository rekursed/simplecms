{% extends 'ZeteqFrontBundle:Layout:layout.html.twig' %}

{% block title %}Sellers registration{% endblock %}
 
{% block content %}

 
          
          <div class="container">
              <div class="page-header" ><h1>Register with us </h1>
                  <h4>Open as many stores as you want and display your products and services to the world. And its all free</h4>
              </div>
                      
          <div class="col-md-5 offset3">
           <form role="form" id="register-form" class="form-horizontal" action="{{ path('registersave') }}" method="post" {{ form_enctype(form) }}>
 
    
 
 
 


 
            

                   {{ form_errors(form) }}
   
     
     
                              
                  <div class="form-group">
<label class="control-label" for="Zeteq_userbundle_registerusertype_email">Your email</label>
<div class="controls">
                          {{ form_errors(form.email) }}
                          {{ form_widget(form.email, { 'attr': {'class': 'form-control'} } ) }}    
</div>
</div>                 
   

          
       <div class="form-group">
<label class="control-label" for="Zeteq_userbundle_registerusertype_password">Pick a password</label>
<div class="controls">
                          {{ form_errors(form.password) }}
                          {{ form_widget(form.password, { 'attr': {'class': 'form-control'} } ) }}    
</div>
</div> 
     
 
     
     
    {{ form_rest(form) }}   
                       
 
 <div class="form-group">
<button type="submit" class="btn btn-default btn-primary">Submit</button>
</div>
                        
                        </form></div>
      
      
   </div>
    
    

{% endblock %}







